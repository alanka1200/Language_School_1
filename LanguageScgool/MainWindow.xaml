<Window x:Class="LanguageScgool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageScgool"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Школа" Height="650" Width="1000">
    <Grid>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="190*"/>
            </Grid.RowDefinitions>
            <Grid Background="LightGray" >
                <Image Margin="50 0 0 0" Source="/Resources/school_logo.png" HorizontalAlignment="Left" Width="75" Height="75" Grid.Row="0"></Image>
                <Border HorizontalAlignment="Center" Width="450" Height="70"  CornerRadius="17" BorderBrush="#FF04A0FF" BorderThickness="4" Background="White">
                </Border>
                <Button Margin="0 0 50 0" HorizontalAlignment="Right" Height="30" Width="80" x:Name="ExBtn" Content="Выход" Click="ExBtn_OnClick"></Button>
            </Grid>

            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"></Frame>
        </Grid>
    </Grid>
</Window>
